{
  "version": "0.0.1",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nest Framework",
      "args": ["${workspaceFolder}/src/main.ts"],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "env": {
        "NODE_ENV": "dev"
      },
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/envs/.env.local",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal"
    }
  ]
}
